<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Top bar with logo and menu -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_logo" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu" />
    </LinearLayout>

    <!-- QR Scanner Placeholder -->
    <LinearLayout
        android:id="@+id/qrScanner"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/topBar"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/qr_placeholder_border">

        <TextView
            android:id="@+id/scanLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCAN TO ENTER"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/scanSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It's That Easy…"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Steps -->
    <LinearLayout
        android:id="@+id/stepsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrScanner"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Scan the QR on the Gate"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Shop without stress, no paper ticket"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Skip the queue, no need for cash… Pay in the app"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- Pay Now Button -->
    <Button
        android:id="@+id/payNowBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#7B3EFF"
        android:text="Pay Now"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"/>
</RelativeLayout>