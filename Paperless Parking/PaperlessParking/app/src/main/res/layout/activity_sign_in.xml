<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_sign_in.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center_horizontal">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1C2A4F"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_pie_chart_logo" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu" />
    </LinearLayout>

    <!-- Main Content Area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- White Card with Black Outline for the Sign-In Form -->

        <!-- Sign In Button -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_outline_white_card"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Profile Icon -->
            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="243dp"
                android:layout_height="231dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/ic_user_avatar" />

            <!-- Username/Placeholder (Filled Grey) -->
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/grey_filled_background"
                android:hint="Placeholder"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#000000"
                android:textColorHint="#9E9E9E" />

            <!-- Password (Filled Grey) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/grey_filled_background"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp" />

                <ImageView
                    android:id="@+id/eye_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_eye" />
            </RelativeLayout>

            <!-- Forgot Password Link -->
            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:text="Forgot password?"
                android:textColor="#000000" />
        </LinearLayout>

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="369dp"
            android:layout_height="93dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-4dp"
            android:background="@drawable/blue_button"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</LinearLayout>
